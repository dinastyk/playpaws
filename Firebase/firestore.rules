rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ğŸ” Users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ” Dogs are public but only the owner can edit
    match /dogs/{dogId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    // ğŸ” Matches can only be modified by users involved
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (request.auth.uid == resource.data.user1 || request.auth.uid == resource.data.user2);
    }

    // ğŸ” Chats can only be accessed by participants
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.sender || request.auth.uid == resource.data.receiver);
    }
  }
}